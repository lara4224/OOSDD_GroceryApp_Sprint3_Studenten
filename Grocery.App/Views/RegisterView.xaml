<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.RegisterView"
             x:DataType="vm:RegisterViewModel"
             Title="RegisterView">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Register" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Username" Text="{Binding Username}" Keyboard="Text" />
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword= "True" />
        <Button Text= "Register" Command="{Binding RegisterCommand}" />
        <Button Text= "Cancel" Command="{Binding CancelCommand}" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" />
    </StackLayout>
</ContentPage>